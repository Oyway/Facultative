
<web-app version="4.0">
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  <servlet-name>Servlet</servlet-name>
  <servlet-class>ua.svinkov.controller.Servlet</servlet-class>
  <!--<load-on-startup>1</load-on-startup>-->
</servlet>
  <servlet-mapping>
    <servlet-name>Servlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>ua.svinkov.controller.filters.EncodingFilter</filter-class>
    <init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
	</init-param>
  </filter>
  <filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<url-pattern>/WEB-INF/*</url-pattern>
		<servlet-name>Controller</servlet-name>
	</filter-mapping>
  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>ua.svinkov.controller.filters.AuthFilter</filter-class>
        <init-param>
			<param-name>admin</param-name>
			<param-value>allcources admin profile addCourse courseedit users</param-value>
		</init-param>
		<init-param>
			<param-name>teacher</param-name>
			<param-value>setMark profile teacher teacherbasis actcourses allcourses teacherCourses</param-value>
		</init-param>
		<init-param>
			<param-name>student</param-name>
			<param-value>student profile userbasis actcourses allcourses reg_course</param-value>
		</init-param>
		<init-param>
			<param-name>common</param-name>
			<param-value>logout ?command=locales locales  locale allcourses</param-value>
		</init-param>
		<init-param>
			<param-name>out-of-control</param-name>
			<param-value>login ?command=locales locales  locale ?Page</param-value>
		</init-param>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <servlet-name>Servlet</servlet-name>
    </filter-mapping>
    
    <filter>
        <filter-name>LocalsFilter</filter-name>
        <filter-class>ua.svinkov.controller.filters.LocalsFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LocalsFilter</filter-name>
        <servlet-name>Servlet</servlet-name>
    </filter-mapping>


  <listener>
    <listener-class>
      ua.svinkov.controller.listener.SessionListener
    </listener-class>
  </listener>
  
  

  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>

  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/WEB-INF/error.jsp</location>
  </error-page>
  
  <!--============================================================
	i18n support
=============================================================-->
  <!-- this way we set the resource bundle name -->
  <context-param>
    <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
    <param-value>resources</param-value>
  </context-param>
  
  <!-- this way we set the default locale (optional) -->
  <!-- the (preferable) browser's locale will be used if we don't set the default locale --> 
  <context-param>
    <param-name>javax.servlet.jsp.jstl.fmt.locale</param-name>
    <param-value>ru</param-value>
  </context-param>
  
  <!-- supported locales -->
  <context-param>
    <param-name>locales</param-name>
    <param-value>ru en</param-value>
  </context-param>
  
  <!--============================================================
	Context listener
=============================================================-->
	<listener>
		<listener-class>ua.svinkov.controller.listener.ContextListener</listener-class>
	</listener>

</web-app>
